@using BlogDeneme.Models.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Tbl_Mesajlar>

@{
    ViewBag.Title = "IletisimIslemleri";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="clearfix">
    <div class="float-left">
        @Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("IletisimIslemleri", new { sayfa }), new PagedListRenderOptions
        {
            LiElementClasses = new List<string>
            { "page-link"}
        })
    </div>
</div>


<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <tr align="center">
            <th>Ad-Soyad</th>
            <th>Mail</th>
            <th>Konu</th>
            <th>Mesaj</th>
            <th>Tarih</th>
            <th>Okundu</th>
            <th>Detay</th>
        </tr>
        @foreach (var x in Model)
        {
            <tr align="center">
                <td>@x.ADSOYAD</td>
                <td>@x.MAIL.Substring(0, 5)...</td>
                <td>@x.KONU.Substring(0, 5)...</td>
                <td>@x.MESAJ.Substring(0, 5)...</td>
                <td>@x.TARIH</td>
                <td><a href="/Vitrin/MesajOkundu/@x.ID" class="btn btn-outline-success">Okundu</a></td>
                <td><a href="/Vitrin/MesajDetay/@x.ID" class="btn btn-outline-warning">Detay</a></td>
            </tr>
        }
    </table>
</div>
