@using BlogDeneme.Models.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Tbl_Galeri>

@{
    ViewBag.Title = "GaleriIslemleri";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="clearfix">
    <div class="float-left">
        @Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("GaleriIslemleri", new { sayfa }), new PagedListRenderOptions
        {
            LiElementClasses = new List<string>
            { "page-link"}
        })
    </div>

    <div class="float-right">
        <a href="/Vitrin/ResimEkle" class="btn btn-info">Yeni Resim Ekle</a>
    </div>
</div>


<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <tr align="center">
            <th>Resim</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var x in Model)
        {
            <tr align="center">
                <td><img src="@x.RESIM" width="100" /></td>
                <td>@Html.ActionLink("Sil", "ResimSil", new { id = x.ID }, new { @class = "btn btn-outline-danger", onclick = "return confirm('Blogu Silmek İstediğinize Emin Misiniz?')" })</td>
                <td><a href="/Vitrin/ResimGetir/@x.ID" class="btn btn-outline-success">Güncelle</a></td>
            </tr>
        }
    </table>
</div>