@using BlogDeneme.Models.Entity
@model List<Tbl_SosyalMedya>

@{
    ViewBag.Title = "SosyalMedyaIslemleri";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="clearfix">
    <div class="float-right">
        <a href="/Vitrin/HesapEkle" class="btn btn-info">Yeni Hesap Ekle</a>
    </div>
    <div class="float-right">
        <a href="/Vitrin/Ikonlar" class="btn btn-warning mr-3">İkonlar</a>
    </div>
</div>

<br />

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <tr align="center">
            <th>Hesap</th>
            <th>Link</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var x in Model)
        {
            <tr align="center">
                <td>@x.Tbl_SosyalMedyaIkon.AD</td>
                <td>@x.LINK</td>
                <td>@Html.ActionLink("Sil", "HesapSil", new { id = x.ID }, new { @class = "btn btn-outline-danger", onclick = "return confirm('Blogu Silmek İstediğinize Emin Misiniz?')" })</td>
                <td><a href="/Vitrin/HesapGetir/@x.ID" class="btn btn-outline-success">Güncelle</a></td>
            </tr>
        }
    </table>
</div>