@using BlogDeneme.Models.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Tbl_BlogYorum>

@{
    ViewBag.Title = "BlogYorum";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="clearfix">
    <div class="float-left">
        @Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("BlogYorum", new { sayfa }), new PagedListRenderOptions
        {
            LiElementClasses = new List<string>
            { "page-link"}
        })
    </div>
</div>


<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <tr align="center">
            <th>Ad-Soyad</th>
            <th>Yorum</th>
            <th>Tarih</th>
            <th>Sil</th>
        </tr>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.ADSOYAD</td>
                <td>@x.YORUM</td>
                <td>@x.TARIH</td>
                <td>@Html.ActionLink("Sil", "YorumSil", new { id = x.ID }, new { @class = "btn btn-outline-danger", onclick = "return confirm('Blogu Silmek İstediğinize Emin Misiniz?')" })</td>
            </tr>
        }
    </table>
</div>