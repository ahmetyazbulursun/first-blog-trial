@model BlogDeneme.Models.Entity.Tbl_Blog

@{
    ViewBag.Title = "BlogGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("BlogGuncelle", "Vitrin", FormMethod.Post))
{
    <div>
        <div class="row">
            <div>
                @Html.HiddenFor(x => x.ID)
            </div>
            <div class="input-group mb-3 col">
                <label class="input-group-text text-dark">Yazar:</label>
                @Html.TextBoxFor(x => x.YAZAR, new { @class = "form-control ml-1", @placeholder = "Yazar adı..." })
            </div>
            <div class="input-group mb-3 col">
                <label class="input-group-text text-dark">Resim:</label>
                @Html.TextBoxFor(x => x.RESIM, new { @class = "form-control ml-3", @placeholder = "Link" })
            </div>
        </div>

        <div class="row">
            <div class="input-group mb-3 col">
                <label class="input-group-text text-dark">Başlık:</label>
                @Html.TextBoxFor(x => x.BASLIK, new { @class = "form-control", @placeholder = "Başlık..." })
            </div>
            <div class="input-group mb-3 col">
                <label class="input-group-text text-dark">Kategori:</label>
                @Html.DropDownListFor(x => x.Tbl_BlogKategori.ID, (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control", @placeholder = "Yazar adı..." })
            </div>
        </div>

        <div class="row">
            <div class="input-group mb-3 col">
                <label class="input-group-text text-dark">Giriş:</label>
                @Html.TextBoxFor(x => x.BILGILENDIRME, new { @class = "form-control ml-2", @placeholder = "Giriş İçeriği..." })
            </div>
        </div>

        <div class="form-group">
            @Html.TextAreaFor(x => x.ICERIK, new { @class = "form-control", id = "content" })
        </div>

        <div class="clearfix">
            <div class="float-right">
                <button class="btn btn-outline-success">Güncelle</button>
            </div>
        </div>
    </div>
}

<script src="//cdn.ckeditor.com/4.19.0/full/ckeditor.js"></script>
<script>
    CKEDITOR.replace('content');
</script>

