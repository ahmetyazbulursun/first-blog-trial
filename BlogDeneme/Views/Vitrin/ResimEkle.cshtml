@model BlogDeneme.Models.Entity.Tbl_Galeri

@{
    ViewBag.Title = "ResimEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />

<form class="form-group" method="post">
    <div class="row">
        <div class="input-group mb-3 col">
            <label class="input-group-text text-dark">Resim:</label>
            @Html.TextBoxFor(x => x.RESIM, new { @class = "form-control", @placeholder = "Link(564x564)...", @required="required" })
            @Html.ValidationMessageFor(x => x.RESIM, "", new { @style = "color: red;", @class = "form-control-text" })
        </div>
    </div>

    <div class="clearfix">
        <div class="float-right">
            <button class="btn btn-outline-info">Resim Ekle</button>
        </div>
    </div>
</form>
