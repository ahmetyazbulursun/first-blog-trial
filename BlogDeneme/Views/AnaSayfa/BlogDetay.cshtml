@using BlogDeneme.Models.Entity
@model List<Tbl_Blog>

@{
    ViewBag.Title = "BlogDetay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- ##### Single Blog Area Start ##### -->
<div class="single-blog-wrapper section-padding-0-100">
    @foreach (var x in Model)
    {
        <!-- Single Blog Area  -->
        <div class="single-blog-area blog-style-2 mb-50">
            <div class="single-blog-thumbnail">
                <img src="@x.RESIM" alt="">
                <div class="post-tag-content">
                    <div class="container">
                        <div class="row">
                            <div class="col-12">
                                <div class="post-date">
                                    <a><span>@(((DateTime)x.TARIH).ToString("dd.MM.yyy"))</span></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="container">
            <div class="row">
                <!-- ##### Post Content Area ##### -->
                <div class="col-12 col-lg-9">

                    <!-- Single Blog Area  -->
                    <div class="single-blog-area blog-style-2 mb-50">
                        <!-- Blog Content -->
                        <div class="single-blog-content">
                            <div class="line"></div>
                            <a href="/AnaSayfa/Kategori/@x.Tbl_BlogKategori.ID" class="post-tag">@x.Tbl_BlogKategori.AD</a>
                            <h4><a class="post-headline mb-0">@x.BASLIK</a></h4>
                            <div class="post-meta mb-50">
                                <p><a href="/Hakkimda/Index">@x.YAZAR</a></p>
                                <p>@ViewBag.dgr yorum</p>
                            </div>

                            <p>@x.BILGILENDIRME</p>

                            <p>@Html.Raw(x.ICERIK)</p>

                        </div>
                    </div>

                   @Html.Action("PartialYazar", "AnaSayfa")

                   @Html.Action("PartialBlogYorum", "AnaSayfa")

                   @Html.Action("PartialYorumYaz", "AnaSayfa")

                </div>

                <!-- ##### Sidebar Area ##### -->
                <div class="col-12 col-md-4 col-lg-3">
                    <div class="post-sidebar-area">

                        @Html.Action("PartialSonYazilarim", "AnaSayfa")

                        @Html.Action("PartialKategoriler", "AnaSayfa")

                    </div>
                </div>
            </div>
        </div>
    }
</div>

@Html.Action("PartialGaleri", "AnaSayfa")
