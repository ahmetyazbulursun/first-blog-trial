@using BlogDeneme.Models.Entity
@model List<Tbl_Blog>

<div class="hero-area">
    <!-- Hero Slides Area -->
    <div class="hero-slides owl-carousel">
        <!-- Single Slide -->
        @foreach (var x in Model)
        {
            <div class="single-hero-slide bg-img" style="background-image: url(@x.RESIM); ">
                <div class="container h-100">
                    <div class="row h-100 align-items-center">
                        <div class="col-12">
                            <div class="slide-content text-center">
                                <div class="post-tag">
                                    <a data-animation="fadeInUp">@x.Tbl_BlogKategori.AD</a>
                                </div>
                                <h2 data-animation="fadeInUp" data-delay="250ms"><a href="/AnaSayfa/BlogDetay/@x.ID">@x.BASLIK</a></h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

