
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <!-- Title -->
    <title>Admin | Blog Deneme</title>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">

    <!-- Favicon -->
    <link rel="shortcut icon" href="~/admin-tema/public/img/favicon.ico">


    <!-- DEMO CHARTS -->
    <link rel="stylesheet" href="~/admin-tema/public/demo/chartist.css">
    <link rel="stylesheet" href="~/admin-tema/public/demo/chartist-plugin-tooltip.css">

    <!-- Template -->
    <link rel="stylesheet" href="~/admin-tema/public/graindashboard/css/graindashboard.css">

    <link rel="icon" type="image/x-icon" href="~/tema/icons8_workspace.ico" />

</head>

<body class="has-sidebar has-fixed-sidebar-and-header">
    <!-- Header -->
    <header class="header bg-body">
        <nav class="navbar flex-nowrap p-0">

            <div class="header-content col px-md-3">
                <div class="d-flex align-items-center">
                    <!-- Side Nav Toggle -->
                    <a class="js-side-nav header-invoker d-flex mr-md-2" href="#"
                       data-close-invoker="#sidebarClose"
                       data-target="#sidebar"
                       data-target-wrapper="body">
                        <i class="gd-align-left"></i>
                    </a>
                    <!-- End Side Nav Toggle -->

                    <div class="dropdown ml-auto">

                    </div>

                    <div class="dropdown mx-3 dropdown ml-2">


                        <a id="profileMenuInvoker" class="header-complex-invoker" href="#" aria-controls="profileMenu" aria-haspopup="true" aria-expanded="false" data-unfold-event="click" data-unfold-target="#profileMenu" data-unfold-type="css-animation" data-unfold-duration="300" data-unfold-animation-in="fadeIn" data-unfold-animation-out="fadeOut">
                            <!--img class="avatar rounded-circle mr-md-2" src="#" alt="John Doe"-->
                            <span class="mr-md-2 avatar-placeholder">A</span>
                            <span class="d-none d-md-block">Ahmet Hakan Eroğlu</span>
                            <i class="gd-angle-down d-none d-md-block ml-2"></i>
                        </a>

                        <ul id="profileMenu" class="unfold unfold-user unfold-light unfold-top unfold-centered position-absolute pt-2 pb-1 mt-4 unfold-css-animation unfold-hidden fadeOut" aria-labelledby="profileMenuInvoker" style="animation-duration: 300ms;">
                            <li class="unfold-item">
                                <a class="unfold-link d-flex align-items-center text-nowrap" href="/Vitrin/Profilim">
                                    <span class="unfold-item-icon mr-3">
                                        <i class="gd-user"></i>
                                    </span>
                                    Profilim
                                </a>
                            </li>
                            <li class="unfold-item">
                                <a class="unfold-link d-flex align-items-center text-nowrap" href="/AnaSayfa/Index" target="_blank">
                                    <span class="unfold-item-icon mr-3">
                                        <i class="gd-location-arrow"></i>
                                    </span>
                                    Siteye Git
                                </a>
                            </li>
                            <li class="unfold-item unfold-item-has-divider">
                                <a class="unfold-link d-flex align-items-center text-nowrap" href="/Login/Logout">
                                    <span class="unfold-item-icon mr-3">
                                        <i class="gd-power-off"></i>
                                    </span>
                                    Çıkış Yap
                                </a>
                            </li>
                        </ul>
                    </div>
                    <!-- End User Avatar -->
                </div>
            </div>
        </nav>
    </header>
    <!-- End Header -->

    <main class="main">
        <!-- Sidebar Nav -->
        <aside id="sidebar" class="js-custom-scroll side-nav">
            <ul id="sideNav" class="side-nav-menu side-nav-menu-top-level mb-0">

                <li class="side-nav-menu-item side-nav-has-menu">
                    <a class="side-nav-menu-link media align-items-center" href="#"
                       data-target="#blog">
                        <span class="side-nav-menu-icon d-flex mr-3">
                            <i class="gd-agenda"></i>
                        </span>
                        <span class="side-nav-fadeout-on-closed media-body">Blog</span>
                        <span class="side-nav-control-icon d-flex">
                            <i class="gd-angle-right side-nav-fadeout-on-closed"></i>
                        </span>
                        <span class="side-nav__indicator side-nav-fadeout-on-closed"></span>
                    </a>

                    <ul id="blog" class="side-nav-menu side-nav-menu-second-level mb-0">
                        <li class="side-nav-menu-item">
                            <a class="side-nav-menu-link" href="/Vitrin/BlogIslemleri">Blog İşlemleri</a>
                        </li>
                        <li class="side-nav-menu-item">
                            <a class="side-nav-menu-link" href="/Vitrin/KategoriIslemleri">Kategori İşlemleri</a>
                        </li>
                        <li class="side-nav-menu-item">
                            <a class="side-nav-menu-link" href="/Vitrin/YazarIslemleri">Yazar İşlemleri</a>
                        </li>
                    </ul>
                </li>


                <li class="side-nav-menu-item side-nav-has-menu">
                    <a class="side-nav-menu-link media align-items-center" href="#"
                       data-target="#sayfalar">
                        <span class="side-nav-menu-icon d-flex mr-3">
                            <i class="gd-write"></i>
                        </span>
                        <span class="side-nav-fadeout-on-closed media-body">Sayfalar</span>
                        <span class="side-nav-control-icon d-flex">
                            <i class="gd-angle-right side-nav-fadeout-on-closed"></i>
                        </span>
                        <span class="side-nav__indicator side-nav-fadeout-on-closed"></span>
                    </a>

                    <ul id="sayfalar" class="side-nav-menu side-nav-menu-second-level mb-0">
                        <li class="side-nav-menu-item">
                            <a class="side-nav-menu-link" href="/Vitrin/HakkimdaIslemleri">Hakkımda</a>
                        </li>
                        <li class="side-nav-menu-item">
                            <a class="side-nav-menu-link" href="/Vitrin/IletisimIslemleri">Mesajlar</a>
                        </li>
                    </ul>
                </li>

                <li class="side-nav-menu-item side-nav-has-menu">
                    <a class="side-nav-menu-link media align-items-center" href="#"
                       data-target="#ekozellik">
                        <span class="side-nav-menu-icon d-flex mr-3">
                            <i class="gd-gallery"></i>
                        </span>
                        <span class="side-nav-fadeout-on-closed media-body">Ek Özellikler</span>
                        <span class="side-nav-control-icon d-flex">
                            <i class="gd-angle-right side-nav-fadeout-on-closed"></i>
                        </span>
                        <span class="side-nav__indicator side-nav-fadeout-on-closed"></span>
                    </a>

                    <ul id="ekozellik" class="side-nav-menu side-nav-menu-second-level mb-0">
                        <li class="side-nav-menu-item">
                            <a class="side-nav-menu-link" href="/Vitrin/GaleriIslemleri">Galeri</a>
                        </li>
                        <li class="side-nav-menu-item">
                            <a class="side-nav-menu-link" href="/Vitrin/SosyalMedyaIslemleri">Sosyal Medya</a>
                        </li>
                    </ul>
                </li>

            </ul>
        </aside>
        <!-- End Sidebar Nav -->
        
        <div class="content">
            
            <div class="py-4 px-3 px-md-4">
                @RenderBody()
            </div>

            <!-- Footer -->
            <footer class="small p-3 px-md-4 mt-auto">
                <div class="row justify-content-between">
                    <div class="col-lg text-center text-lg-right">
                        Ahmet Hakan Eroğlu &copy;
                        @DateTime.Now.Year Tüm Hakları Saklıdır | Designed By <a href="https://ahmetyazbulursun.com" target="_blank">Ahmet Hakan Eroğlu</a>
                    </div>
                </div>
            </footer>
            <!-- End Footer -->
        </div>
    </main>


    <script src="~/admin-tema/public/graindashboard/js/graindashboard.js"></script>
    <script src="~/admin-tema/public/graindashboard/js/graindashboard.vendor.js"></script>

    <!-- DEMO CHARTS -->
    <script src="~/admin-tema/public/demo/resizeSensor.js"></script>
    <script src="~/admin-tema/public/demo/chartist.js"></script>
    <script src="~/admin-tema/public/demo/chartist-plugin-tooltip.js"></script>
    <script src="~/admin-tema/public/demo/gd.chartist-area.js"></script>
    <script src="~/admin-tema/public/demo/gd.chartist-bar.js"></script>
    <script src="~/admin-tema/public/demo/gd.chartist-donut.js"></script>
    <script>
        $.GDCore.components.GDChartistArea.init('.js-area-chart');
        $.GDCore.components.GDChartistBar.init('.js-bar-chart');
        $.GDCore.components.GDChartistDonut.init('.js-donut-chart');
    </script>
</body>
</html>